<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>com.abc.cinema.controllers.PaymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddReviewServlet</servlet-name>
        <servlet-class>com.abc.cinema.controllers.AddReviewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexComingSoonServlet</servlet-name>
        <servlet-class>com.abc.cinema.controllers.IndexComingSoonServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FetchReviewServlet</servlet-name>
        <servlet-class>com.abc.cinema.controllers.FetchReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/PaymentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddReviewServlet</servlet-name>
        <url-pattern>/AddReviewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexComingSoonServlet</servlet-name>
        <url-pattern>/IndexComingSoonServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchReviewServlet</servlet-name>
        <url-pattern>/FetchReviewServlet</url-pattern>
    </servlet-mapping>
</web-app>
